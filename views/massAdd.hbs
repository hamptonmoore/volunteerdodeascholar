<h3>Unadded Students From Your School</h3>
<br><br>

<div class="">
    <div class="card-deck">
        {{#each students}}
            <div class="col-sm-12 col-md-6 col-xl-4 card-margin">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{this.name}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{this.email}}</h6>
                        <div class="btn-group" role="group">
                            <form action="/addStudent?redir=massAdd" method="post">
                                <input type="email" class="form-control" value="{{this.email}}" name="email" required
                                    style="display: none">
                                <button type="submit" class="btn btn-primary mt-auto" style="width: 100%">Add
                                    Student</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>